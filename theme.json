{
    "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
    "version": 1,
    "settings": {
        "appearanceTools": true,
        "color":{
            "text": true,
            "background": true,
            "link": true,
            "palette": [
                {
                    "name": "Oat",
					"slug": "oat",
					"color": "#FBF9F3"
                },
                {
                    "name": "Midnight",
					"slug": "midnight",
					"color": "#1F3567"
                },
                {
                    "name": "Bordeaux",
					"slug": "bordeaux",
					"color": "#5B2523"
                },
                {
                    "name": "Sky",
					"slug": "sky",
					"color": "#738DB9"
                },
                {
                    "name": "Dune",
					"slug": "dune",
					"color": "#DA8F43"
                },
                {
                    "name": "Tulip",
					"slug": "tulip",
					"color": "#DD6232"
                },
                {
                    "name": "Flamingo",
					"slug": "flamingo",
					"color": "#E6909B"
                },
                {
                    "name": "Charcoal",
					"slug": "charcoal",
					"color": "#262626"
                },
                {
                    "name": "Sage",
					"slug": "sage",
					"color": "#91BD9A"
                },
                {
                    "name": "Pine",
					"slug": "pine",
					"color": "#203926"
                }
            ]
        },
        "layout": {
            "contentSize": "min(90%, 657px)",
            "wideSize": "min(95%, 916px)"
        },
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true
        },
        "border": {
            "radius": true,
            "width": true,
            "color": true,
            "style": true
        },
        "typography": {
            "fontWeight": true,
            "fontFamilies": [
                {
                    "fontFamily": "soleil, sans-serif",
					"slug": "soleil",
					"name": "Soleil"
                },
                {
                    "fontFamily": "p22-mackinac-pro, serif",
					"slug": "p22-mackinac-pro",
					"name": "P22 Mackinac Pro"
                }
            ]
                
        }
    },
    "styles": {
        "spacing": {
            "blockGap": "1rem"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--soleil)"
        },
        "elements": {
            "h2": {
                "typography": {
                    "fontWeight": "800"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--tulip)"
                }
            }
        },
        "blocks": {
            "core/heading":{
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--p-22-mackinac-pro)"
                }
            },
            "core/button":{
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--soleil)",
                    "fontWeight": "800"
                },
                "spacing": {
                    "padding": {
                        "left": "25px",
                        "right": "25px",
                        "top": "5px",
                        "bottom": "5px"
                    }
                },
                "border":{
                    "radius": "8px",
                    "width": "3px"
                }
            },
            "core/post-featured-image":{
                "border": {
                    "radius": "0 8px 8px 0"
                }
            }
        }
    }
}